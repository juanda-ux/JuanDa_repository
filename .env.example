# --- Base ---
NODE_ENV=development
LOG_LEVEL=debug
APP_DOMAIN=http://localhost:3000
API_URL=http://localhost:4000
CDN_URL=http://localhost:4566/websmith

# --- Auth ---
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me-too
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
OAUTH_GOOGLE_CLIENT_ID=google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=google-client-secret
OAUTH_GITHUB_CLIENT_ID=github-client-id
OAUTH_GITHUB_CLIENT_SECRET=github-client-secret
EMAIL_VERIFICATION_TOKEN_TTL=24h
PASSWORD_RESET_TOKEN_TTL=1h

# --- Database ---
DATABASE_URL=postgresql://websmith:websmith@localhost:5432/websmith
SHADOW_DATABASE_URL=postgresql://websmith:websmith@localhost:5433/websmith_shadow
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# --- Redis / Queue ---
REDIS_URL=redis://localhost:6379
QUEUE_PREFIX=websmith

# --- Storage ---
S3_ENDPOINT=http://localhost:4566
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minio
S3_SECRET_ACCESS_KEY=minio123
S3_BUCKET_ASSETS=websmith-assets

# --- Email ---
EMAIL_PROVIDER=resend
EMAIL_FROM="WebSmith Studio <noreply@websmith.dev>"
RESEND_API_KEY=resend-api-key
SENDGRID_API_KEY=sg-api-key

# --- Stripe ---
STRIPE_API_KEY=stripe-api-key
STRIPE_WEBHOOK_SECRET=stripe-webhook-secret
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_PRO=price_pro

# --- Feature Flags ---
FEATURE_FLAGS_DEFAULT=multiTenant:true,aiGeneration:true

# --- Analytics ---
PLAUSIBLE_API_URL=http://localhost:8000
GA_MEASUREMENT_ID=G-XXXXXXX

# --- Security ---
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100
HCAPTCHA_SITE_KEY=hcaptcha-site-key
HCAPTCHA_SECRET_KEY=hcaptcha-secret-key
CSRF_SECRET=csrf-secret

# --- Observability ---
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
PROMETHEUS_SCRAPE_USER=prometheus
PROMETHEUS_SCRAPE_PASSWORD=prometheus

# --- Deployment ---
VERCEL_TOKEN=vercel-token
NETLIFY_TOKEN=netlify-token

# --- AI ---
LLM_PROVIDER=local
LLM_ENDPOINT=http://localhost:8080
